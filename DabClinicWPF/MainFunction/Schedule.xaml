                                               Height="20"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="5,0,0,0" />
                                        <ContentPresenter Grid.Column="1"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Content="Back" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
