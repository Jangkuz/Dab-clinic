                    <Button x:Name="btnBack"
                            BorderThickness="0"
                            Foreground="Black"
                            FontSize="15"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="5,0,5,0"
                            Click="btnBack_Click"
                            Grid.Column="1">
                        <Button.Style>
